                <div class="col-md-8 col-md-pull-4">
                    <div class="conversation__head boxed boxed--lg bg--primary">
                        <h4>
                            <%= result.title%>
                        </h4>
                        <span>
                            <%= result.created_at%></span>
                        <div class="conversation__avatar">
                            <img alt="Image" src="/img/avatar-round-1.png" />
                            <span>
                                <em>by</em>
                                <a href="#">
                                    <%= result.author%></a>
                            </span>
                        </div>
                    </div>
                    <div class="conversation__reply boxed boxed--border">
                                <div class="row" style=" padding-bottom: 300px">
                                        <%= result.content%>
                                </div>
                            <div class="row">
                                <form id="comment" method="post" action="/coding/<%=result._id%>"><div class="col-xs-12">
                                    <textarea rows="4" name="content" placeholder="Type reply message here"></textarea>
                                </div>
                            </form>
                                <div class="col-sm-4">
                                    <button onclick="document.getElementById('comment').submit()" type="submit" class="btn">Reply</button>
                                </div>
                            </div>
                    </div>
                    <div class="comments conversation__comments">
                        <ul class="comments__list">
                                <% for(var i=comment.length-1;i>=0; i--){%>
                            <li>

                                   
                                <div class="comment">
                                    <div class="comment__avatar">
                                        <img alt="Image" src="/img/avatar-round-2.png" />
                                    </div>
                                    <div class="comment__body">
                                        <!-- <h5 class="type--fine-print"><%=comment[i].author%></h5> -->
                                        <div class="comment__meta">
                                            <span><%=comment[i].created_at%></span>
                                        </div>
                                        <p>
                                           <%=comment[i].content%>
                                        </p>
                                        
                                    </div>
                                </div>
                                
                                <!--end comment-->
                            </li>
                            <%}%>
                        </ul>
                    </div>
                    <!--end comments-->
                </div>
            </div>
            <!--end of row-->
        </div>
